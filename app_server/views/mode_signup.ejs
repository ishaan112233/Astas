<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-t-85 p-b-20">
				<form class="login100-form validate-form" onsubmit="return checkEmail()" method="POST" action="/moderator">
					<span class="login100-form-title p-b-70">
						Welcome
					</span>
					<span class="login100-form-avatar">
						<img src="https://previews.123rf.com/images/tanyastock/tanyastock1803/tanyastock180300490/97923644-user-icon-avatar-login-sign-circle-button-with-soft-color-gradient-background-vector-.jpg" alt="IMAGE">
					</span>

					<div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate = "Enter Email">
						<input class="input100" type="text" id="email" name="moderator">
						<span class="focus-input100" data-placeholder="Email"></span>
					</div>
					<div class="wrap-input100 validate-input m-t-85 m-b-35">
						<input class="input100" type="tel" name="modtel" maxlength="10" minlength="10">
						<span class="focus-input100" data-placeholder="PhoneNumber"></span>
					</div>

					<div class="container-login100-form-btn">
						<button type="submit" class="login100-form-btn" >
							SignUp
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	

